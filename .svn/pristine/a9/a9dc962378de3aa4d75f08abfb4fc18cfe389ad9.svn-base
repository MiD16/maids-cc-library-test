package com.template.Action.User;

import javax.annotation.PostConstruct;

import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.Lazy;
import org.springframework.stereotype.Component;

import com.Base.Class.CAction;
import com.template.Action.CActionConstant;
import com.template.BusinessRule.CBusinessRuleConstant;

@Component(CActionConstant.LOCK_USER)
@Lazy
public class CALockUser extends CAction 
{
	public CALockUser(ApplicationContext applicationContext)
	{
		setApplicationContext(applicationContext);
	}
	
	@PostConstruct
	public void init()
	{
		addBusinessnRule(CBusinessRuleConstant.USER_IS_NOT_DELETED);
		addBusinessnRule(CBusinessRuleConstant.USER_IS_NOT_LOCK);
	}
}
